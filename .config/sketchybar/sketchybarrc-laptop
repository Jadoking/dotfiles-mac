#!/usr/bin/env zsh

FONT_FACE="JetBrainsMono Nerd Font"

PLUGIN_DIR="$HOME/.config/sketchybar/plugins-laptop"
PLUGIN_SHARED_DIR="$HOME/.config/sketchybar/plugins"

SPOTIFY_EVENT="com.spotify.client.PlaybackStateChanged"

# === Transparent bar with blur ===
sketchybar --bar \
    height=32 \
    color=0x00000000 \
    blur_radius=30 \
    margin=0 \
    sticky=on \
    padding_left=20 \
    padding_right=20 \
    notch_width=180 \
    display=main

# === Default style ===
sketchybar --default \
    background.color=0xcc494d64 \
    background.corner_radius=999 \
    background.padding_left=10 \
    background.padding_right=10 \
    background.height=24 \
    background.drawing=on \
    border_width=2 \
    border_color=0xffffffff \
    icon.font="$FONT_FACE:Medium:15.0" \
    icon.padding_left=5 \
    icon.padding_right=5 \
    label.font="$FONT_FACE:Medium:12.0" \
    label.color=0xffcad3f5 \
    label.y_offset=0 \
    label.padding_left=0 \
    label.padding_right=5

# === Hidden event handlers ===
sketchybar --add item front_app left \
    --set front_app \
    drawing=off \
    script="$PLUGIN_SHARED_DIR/front_app.sh" \
    --subscribe front_app front_app_switched

sketchybar --add item workspace_watcher left \
    --set workspace_watcher \
    drawing=off \
    script="$PLUGIN_SHARED_DIR/workspace_event.sh"

# === Main visible label: app + tracker ===
sketchybar --add item front_app.name left \
    --set front_app.name \
    background.drawing=on \
    background.color=0xcc494d64 \
    icon.drawing=off \
    icon.background.drawing=off \
    label.font="$FONT_FACE:Bold:12.0" \
    label.color=0xffcad3f5 \
    label.drawing=yes \
    label.use_markup=true \
    label.padding_left=12 \
    label.padding_right=12 \
    border_width=2 \
    border_color=0xffffffff

# === Spotify ===
sketchybar --add event spotify_change $SPOTIFY_EVENT \
    --add item spotify left \
    --set spotify \
    background.drawing=on \
    background.color=0xcc494d64 \
    icon.drawing=off \
    icon.background.drawing=off \
    label.drawing=yes \
    label.padding_left=12 \
    label.padding_right=12 \
    border_width=2 \
    border_color=0xffffffff \
    script="$PLUGIN_DIR/spotify.sh" \
    --subscribe spotify spotify_change mouse.clicked

# === Clock (working now) ===
sketchybar --add item clock right \
    --set clock \
    background.drawing=on \
    background.color=0xcc494d64 \
    icon.drawing=off \
    icon.background.drawing=off \
    label.drawing=yes \
    label.padding_left=12 \
    label.padding_right=12 \
    border_width=2 \
    border_color=0xffffffff \
    script="$PLUGIN_SHARED_DIR/calendar.sh" \
    update_freq=10

# === Battery ===
sketchybar --add item battery right \
    --set battery \
    background.drawing=on \
    background.color=0xcc494d64 \
    icon.drawing=off \
    icon.background.drawing=off \
    label.drawing=yes \
    label.padding_left=12 \
    label.padding_right=12 \
    border_width=2 \
    border_color=0xffffffff \
    script="$PLUGIN_DIR/battery.sh" \
    update_freq=30

# === Finalize ===
sketchybar --update

